   <div class="bannerBox"> 
    <div class="bd"> 
     <ul> 
      <li style="background-image: url(/pc/img/business-01.jpg);"></li> 
     </ul> 
    </div> 
   </div> 
   <div class="content"> 
    <div class="case"> 
     <div class="container"> 
      <h1>职位推荐</h1> 
      <div class="sliderBox active"> 
       <div class="bd recommend"> 
          <ul> 
              <% if(products.length){
                products.forEach(function(product){ %>
                  <li> 
                    <a href="javascript:;"> 
                      <div class="frontBox"> 
                        <img class="cover" data-src='<%= product.cover %>' src="" alt="" /> 
                        <h1><%= product.title %></h1> 
                        <p><%= product.intro %></p> 
                      </div> 
                      <div class="backBox"> 
                        <h1><%= product.workType %></h1>
                        <h3>薪资说明</h3> 
                        <p><%- product.pay%> </p> 
                        <h3>福利说明</h3> 
                        <p><%- product.benefit%> </p> 
                        <h3>用工说明</h3> 
                        <p><%- product.task%> </p> 
                        <h3>要求说明</h3> 
                        <p><%- product.require%> </p>
                        <p class="scan">微信扫描二维码进行在线应聘</p> 
                        <img class="code"  data-src='<%= product.code %>' src="" alt="" /> 
                      </div> 
                    </a> 
                  </li>
                  <% })
                } %>
           </ul>
       </div> 
       <a href="javascript:;" class="left"></a> 
       <a href="javascript:;" class="right"></a> 
      </div> 
     </div> 
