  <script type="text/javascript">
    $(".sliderBox").slide({
        mainCell: ".bd ul",
        prevCell: ".left",
        nextCell: ".right",
        titCell: ".hd a",
        effect: "leftLoop",
        autoPlay: false,
        easing: "easeOutCirc",
        interTime: 5000,
        vis: 4
    });
    $('.case p').find('a').each(function (index, ele) {
        $(ele).click(function () {
            $(this).parents('p').find('.active').removeClass('active');
            $(this).addClass('active');
            $('.case .sliderBox.active').removeClass('active');
            $('.case').find('.sliderBox').eq(index).addClass('active');
